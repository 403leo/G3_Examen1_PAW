@model Examen1_LeonardoMadrigal.ViewModels.ObjetosViewModel

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Lista de administradores</h2>
    <p>
        <a asp-action="Create">Crear Usuario</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Username
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Correo
                </th>
                <th>
                    Telefono
                </th>
                <th>
                    Password
                </th>
                <th>
                    Rol
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Usuarios)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>@(new String('*', item.Password.Length))</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rol)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <h2>Vehículos</h2>
    <p>
        <a asp-controller="Vehiculo" asp-action="Create">Crear Vehiculo</a>
    </p>
    <div class="row">
        @foreach (var item in Model.Vehiculos)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    @* <img src="/images/placeholder.jpg" alt="Imagen no disponible" class="card-img-top" /> *@
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Placa)</h5>
                        <p class="card-text">Precio: @Html.DisplayFor(modelItem => item.Modelo)</p>
                        <p class="card-text">Disponible: @Html.DisplayFor(modelItem => item.Estado)</p>
                        <td>

                            <a asp-controller="Vehiculo" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-controller="Vehiculo" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-controller="Vehiculo"  asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                        </td>
                    </div>
                </div>
            </div>
        }
    </div>

    <h2>Rutas</h2>
    <p>
        <a asp-controller="Ruta" asp-action="Create">Crear Ruta</a>
    </p>
    <div class="row">
        @foreach (var item in Model.Rutas)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    @* <img src="/images/placeholder.jpg" alt="Imagen no disponible" class="card-img-top" /> *@
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nombre)</h5>
                        <p class="card-text">Precio: @Html.DisplayFor(modelItem => item.Estado)</p>
                        <p class="card-text">Disponible: @Html.DisplayFor(modelItem => item.Horarios)</p>
                        <td>

                            <a asp-controller="Ruta" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-controller="Ruta" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-controller="Ruta" asp-action="Delete" asp-route-id="@item.Id">Delete</a> 

                        </td>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
