@model Examen1_LeonardoMadrigal.Models.Boleto

@{
    ViewData["Title"] = "Editar Boleto";
}

<h2>Editar Boleto</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="UsuarioId">Usuario</label>
        <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
    </div>

    <div class="form-group">
        <label for="RutaId">Ruta</label>
        <select asp-for="RutaId" class="form-control" asp-items="ViewBag.RutaId"></select>
    </div>

    <div class="form-group">
        <label for="VehiculoId">Vehículo</label>
        <select asp-for="VehiculoId" class="form-control" asp-items="ViewBag.VehiculoId"></select>
    </div>

    <div class="form-group">
        <label for="Cantidad">Cantidad de Boletos</label>
        <input type="number" asp-for="Cantidad" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-success">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

